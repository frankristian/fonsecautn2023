<div class="container" style="margin: 50px auto;">
</div class="row">
<div class="col-6 offset-3">
    <h4>Agregar una nueva novedad</h4>
    <form action="/admin/novedades/modificar" method="post">
    <input type="hidden" value="{{novedad.id}}" name="id">
        <div class="mb-3 row form-group">
            <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Titulo" value="{{novedad.titulo}}">
        </div>
        <div class="mb-3 row form-group">
            <textarea name="subtitulo" id="subtitulo" cols="30" rows="4" class="form-control"
                placeholder="SubtÃ­tulo"> {{novedad.subtitulo}}</textarea>
        </div>
        <div class="mb-3 row form-group">
            <textarea name="cuerpo" id="cuerpo" cols="80" rows="10" class="form-control"
                placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
        {{#if error}}
        <h5 style="color: red;">{{message}}</h5>
        {{/if}}
    </form>
</div>
</div>
</div>